<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="socialplatform.backend.backend.Mapper.CategoryMapper">
    <resultMap id="BaseResultMap" type="socialplatform.backend.backend.model.Category">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
    </resultMap>

    <!--删除分类-->
    <delete id="deleteById">
        DELETE FROM category WHERE id = #{id}
    </delete>
    <!--插入分类-->
    <insert id="insert" parameterType="socialplatform.backend.backend.model.Category" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO category(
            name, create_time, update_time
        )VALUES (
                    #{name},NOW(),NOW()
                )
    </insert>
    <!--更新分类-->
    <update id="update" parameterType="socialplatform.backend.backend.model.Category">
        UPDATE category
        <set>
            <if test="name != null and name != ''">
                name = #{name},
            </if>
            update_time=Now()
        </set>
        WHERE id = #{id}
    </update>
    <!--根据id查询分类-->
    <select id="selectById" resultMap="BaseResultMap">
        SELECT
            id,name,create_time,update_time
        FROM category
        WHERE id = #{id}
    </select>
    <!--查询所有分类-->
    <select id="selectAll" resultMap="BaseResultMap">
        SELECT
            id,name,create_time,update_time
        FROM category
        ORDER BY create_time DESC
    </select>
    <!--检查分类是否被文章使用-->
    <select id="isCategoryUsed" resultMap="boolean">
        SELECT COUNT(*) > 0
        FROM article
        WHERE category_id = #{id}
    </select>
    <!--查询可用分类-->
    <select id="selectAvailableCategories" resultMap="BaseResultMap">
        SELECT
            id, name, create_time, update_time
        FROM category
        ORDER BY name ASC
    </select>

</mapper>
