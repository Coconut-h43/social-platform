        </if>
    </delete>

    <!--查询管理-->
    <select id="selectArticleIdByTagId" resultMap="BaseResultMap">
        SELECT DISTINCT article_id
        FROM article_tag
        WHERE tag_id = #{tagId}
        ORDER BY create_time DESC
    </select>
    <select id="selectTagIdByArticleId" resultMap="BaseResultMap">
        SELECT tag_id
        FROM article_tag
        WHERE article_id = #{articleId}
        ORDER BY create_time DESC
    </select>



</mapper>